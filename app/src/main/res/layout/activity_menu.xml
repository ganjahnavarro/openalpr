<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#263238"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="License Plate OCR"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="15sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <Button
                        android:id="@+id/camera"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:background="#EF5350"
                        android:drawableTop="@drawable/launcher_camera"
                        android:paddingTop="50dp"
                        android:text="Camera"/>

                    <Button
                        android:id="@+id/gallery"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:layout_weight="1"
                        android:background="#42A5F5"
                        android:drawableTop="@drawable/launcher_tiles"
                        android:paddingTop="50dp"
                        android:text="Gallery"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <Button
                        android:id="@+id/settings"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:background="#7E57C2"
                        android:drawableTop="@drawable/launcher_settings"
                        android:paddingTop="50dp"
                        android:text="Settings"/>

                    <Button
                        android:id="@+id/about"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:layout_weight="1"
                        android:background="#26A69A"
                        android:drawableTop="@drawable/launcher_info"
                        android:paddingTop="50dp"
                        android:text="About"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:background="#FFA726"
                        android:drawableTop="@drawable/launcher_shutdown"
                        android:paddingTop="50dp"
                        android:text="Logout" />

                    <Button
                        android:id="@+id/none"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:layout_weight="1"
                        android:background="#222D33"
                        android:drawableTop="@drawable/launcher_info"
                        android:paddingTop="50dp"
                        android:text="About"
                        android:visibility="invisible"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>